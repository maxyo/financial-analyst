{
  "compilerOptions": {
    "target": "ES2020",
    "module": "UMD",
    "moduleResolution": "bundler",
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "jsx": "react",
    "rootDir": "src",
    "outDir": "build",
    "esModuleInterop": true,
    "allowImportingTsExtensions": true,
  },
  "include": [
    "src/**/*"
  ]
}
